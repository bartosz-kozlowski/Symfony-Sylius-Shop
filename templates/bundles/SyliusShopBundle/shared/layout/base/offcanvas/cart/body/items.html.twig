{% set cart = hookable_metadata.context.cart %}

{% if cart.empty %}
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>{{ 'sylius.ui.your_cart_is_empty'|trans }}.
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th scope="col">
                    <i class="bi bi-box"></i> {{ 'sylius.ui.item'|trans }}
                </th>
                <th scope="col" class="text-center">
                    {{ 'sylius.ui.quantity'|trans }}
                </th>
                <th scope="col" class="text-end">
                   {{ 'sylius.ui.price'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in cart.items %}
                {% hook 'items' with { item } %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
