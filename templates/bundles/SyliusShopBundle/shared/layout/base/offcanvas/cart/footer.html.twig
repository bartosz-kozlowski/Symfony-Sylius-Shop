{% import "@SyliusShop/shared/macro/money.html.twig" as money %}

{% set cart = hookable_metadata.context.cart %}

<div class="p-3 pb-5 border-top">
    <div class="offcanvas-footer">
        <div class="d-flex justify-content-between align-items-center py-3">
            <span class="h6 text-muted mb-0">
                <i class="bi bi-receipt me-1"></i>{{ 'sylius.ui.subtotal'|trans }}
            </span>
            <span class="h5 mb-0">{{ money.convertAndFormat(cart.itemsTotal) }}</span>
        </div>
        <div class="d-grid gap-2 pt-2">
            <a href="{{ path('sylius_shop_cart_summary') }}"
               class="btn btn-outline-secondary w-100">
                <i class="bi bi-pencil-square me-1"></i>{{ 'sylius.ui.view_and_edit_cart'|trans }}
            </a>
            <a href="{{ path('sylius_shop_checkout_start') }}"
               class="btn btn-primary w-100">
                <i class="bi bi-credit-card me-1"></i>{{ 'sylius.ui.checkout'|trans }}
            </a>
        </div>
    </div>
</div>
