{% if app.request.get('_route') != 'sylius_shop_product_show' %}
    {# nie renderuj formularza poza stronÄ… produktu #}
{% else %}
    {% import '@SyliusShop/shared/buttons.html.twig' as buttons %}
    {% set form = hookable_metadata.context.form %}
    {% set variant = form.cartItem.vars.value.variant %}
    {% set enabled = form.vars.valid and variant is not null and variant.enabled %}

    <div class="mb-3">
        {{ buttons.submit('sylius.ui.add_to_cart'|trans, 'add-to-cart-button', null, 'btn-primary', not enabled) }}
    </div>
{% endif %}
