{% extends '@SyliusShop/shared/layout/base.html.twig' %}

{% block content %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@7.3.0/dist/turbo.es2017-umd.js"></script>
    <div class="container px-0 my-5">
        <div class="card shadow-lg rounded-4 overflow-hidden" data-controller="configurator">
            <div class="d-flex w-100 justify-content-between" style="height:calc(100vh - 160px);">

                <!-- Lista produktów -->
                <aside class="col-12 col-md-4 border-end bg-light d-flex flex-column h-100" style="min-height: 0;">
                    <div class="px-3 pt-4 pb-2 border-bottom d-flex align-items-center">
                        <i class="bi bi-box-seam fs-5 me-2 text-muted"></i>
                        <h5 class="fw-semibold text-muted mb-0">Produkty</h5>
                    </div>

                    <turbo-frame id="productListFrame"
                                 src="{{ path(app.request.attributes.get('_route'), app.request.query.all) }}"
                                 style="height: 100%; overflow: hidden;">
                        <div class="text-center p-5">
                        </div>
                    </turbo-frame>
                </aside>

                <!-- Zestaw użytkownika -->
                <aside class="col-12 col-md-8 bg-white" id="cartPanel" style="max-height:calc(100vh - 160px); overflow-y:auto;">
                    <div class="px-3 pt-4 pb-2 border-bottom d-flex align-items-center">
                        <i class="bi bi-basket fs-5 me-2 text-muted"></i>
                        <h5 class="fw-semibold text-muted mb-0">Twój zestaw</h5>
                    </div>

                    <div data-configurator-target="viewer" id="cartViewer" style="width:100%; height:400px;" class="bg-body border-bottom"></div>

                    <div data-configurator-target="list" id="cartList" class="text-muted text-center py-4">
                        Brak dodanych produktów
                    </div>

                    <div class="position-sticky bottom-0 bg-white p-3 border-top" style="z-index: 10;">
                        <button data-configurator-target="checkout"
                                data-action="configurator#checkout"
                                class="btn btn-success w-100 d-none"
                                id="checkoutBtn">
                            <i class="bi bi-cart-check me-1"></i> Dodaj do koszyka
                        </button>
                    </div>
                </aside>

            </div>
        </div>
    </div>
{% endblock %}
